
<div class="banner-container">
  <div class="banner-image">
    <div class="banner-text">
      <h1>What's your power<%=", #{current_user.first_name}" if current_user %>?</h1>
    </div>
    <div id="heroes-comp"></div>
  </div>
</div>

<div class="container">
  <% if !@superpowers.empty? %>
    <div class="card-grid">
      <% @superpowers.each do |superpower| %>
        <%= link_to superpower_path(superpower), class: "card-link" do %>
          <%= render "superpowers/partials/card", :superpower => superpower%>
      <% end %>
    <% end %>
    </div>
  <% else %>
    <p>No Superpowers in the DB</p>
  <% end %>
</div>

<div id="index-bg"></div>



