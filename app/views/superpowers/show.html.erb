<div class="container" id="show-content">
  <div class="show-left-container">
    <div class="show-img-container" style="background-image: url(<%= @superpower.image %>);">
    </div>
    <div class="show-info">
      <h2><%= @superpower.name %></h2>

      <p><%= @superpower.description %></p>

      <p>Owner first name: <%= @superpower.owner.first_name %></p>
      <p>Owner last name: <%= @superpower.owner.last_name %></p>

      <p>Price: <%= @superpower.price %> DKK a day</p>

      <p>Superpower type: <%= @superpower.superpower_category.name %></p>

      <p>Superpower icon: <%= image_tag("categories/#{@superpower.superpower_category.icon}") %></p>
    </div>
  </div>
  <div class="show-right-container">
    <%= render './bookings/form_new_booking' %>

  </div>
</div>
